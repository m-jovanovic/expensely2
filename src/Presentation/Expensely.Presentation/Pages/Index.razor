@page "/"
@using Expensely.Contracts.Expenses
@using Expensely.Presentation.State.Expenses
@using Fluxor
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@inject IState<ExpensesState> State
@inject IDispatcher Dispatcher

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h3 class="mb-3">Expenses</h3>

                @if (State.Value.IsLoading || State.Value.Expenses == null)
                {
                    <div>Loading...</div>
                }
                else
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Amount</th>
                                <th>Created On</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ExpenseDto expense in State.Value.Expenses)
                            {
                                <tr>
                                    <td>@expense.Id</td>
                                    <td>@expense.FormattedExpense</td>
                                    <td>@expense.CreatedOnUtc</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

@code
{
    protected override void OnInitialized()
    {
        base.OnInitialized();

        Dispatcher.Dispatch(new GetExpensesDataAction());
    }
}
